{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@vangojs/*",
    "packages/docs"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:docs": "yarn workspace docs build",
    "build:vango": "yarn workspace @vangojs/vuepress-theme-vango build",
    "codecov": "codecov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "dev:docs": "yarn workspace docs dev",
    "dev:vango": "yarn workspace @vangojs/vuepress-theme-vango dev",
    "pub": "lerna publish from-git",
    "register-vango": "lerna exec --scope vangojs -- yarn link",
    "show-help": "yarn workspace docs show-help",
    "test": "jest",
    "view-info": "yarn workspace docs view-info"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "packages/*/src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "codecov": "3.7.1",
    "coveralls": "3.0.9",
    "eslint": "6.7.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-vue": "6.0.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lerna": "3.16.4",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "sort-package-json": "^1.36.0",
    "vue-eslint-parser": "7.0.0"
  }
}
